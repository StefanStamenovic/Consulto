<% include ../partials/head %>
<div class="row">
    <div class="col-md-8 col-lg-offset-2" style="margin-bottom: 42px; margin-top: 40px;">
        <div class="jumbotron" style="padding-top: 0px;">
            <h1 class="col-lg-offset-4" style="margin-top: 20px;">Prijava</h1>
            <hr style=" margin-bottom: 90px;" />
            <% if (null != null) { %>
            <div class="col-lg-offset-3">
                <div class="alert alert-dismissible alert-danger" style="width: 60%; margin-top: -74px;">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong><%= error %></strong>
                </div>
            </div>
            <% } %>
            <form class="form-horizontal col-lg-offset-3" action="/login" method="post">
                <fieldset>
                    <div class="form-group">
                        <div class="col-lg-10">
                            <input type="email" name="email" class="form-control" id="author" placeholder="Email">
                        </div>
                    </div>
                    <div class="form-group" style="margin-bottom: 40px;">
                        <div class="col-lg-10">
                            <input type="password" name="password" class="form-control" id="artist" placeholder="Sifra">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10 col-lg-offset-1">
                            <button type="submit" class="btn btn-primary" style="width: 50%; font-size: 25px">Prijavi se</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>