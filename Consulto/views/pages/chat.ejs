<% include ../partials/head %>
<script src="/socket.io/socket.io.js"></script>
<script>
    $(function () {
        var socket = io();
        $('form').submit(function () {
            socket.emit('chat message', $('#message').val());
            $('#message').val('');
            return false;
        });

        socket.on('chat message', function (msg) {
            $('#messages').append($('<blockquote>').text(msg));
            $('#messages').scrollTop($('#messages').prop("scrollHeight"));
        });
    });
</script>
<div class="row">
    <div class="col-md-3">
        <div style="height: 90%; border: 1px solid #e2e2e2">
        </div>
    </div>
    <div class="col-md-9">
        <div class="row">
            <div style="height: 85%; border: 1px solid #e2e2e2">
                <div id="messages" style="overflow:auto;height: 100%">
                    
                </div>
            </div>
        </div>
        <div class="row">
            <form class="form-group" style="margin-bottom: 0px;">
                <div class="input-group">
                    <input id="message" type="text" class="form-control" placeholder="Unesite poruku ...">
                    <span class="input-group-btn">
                        <button  type="submit" class="btn btn-default">Posalji</button>
                    </span>
                </div>
            </form>
        </div>
    </div>
</div>

